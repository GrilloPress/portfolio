---
pageable: true
per_page: 10
---

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <% if paginate && num_pages > 1 %>
      <p>Page <%= page_number %> of <%= num_pages %></p>

      <% if prev_page %>
        <p><%= link_to 'Previous page', prev_page %></p>
      <% end %>
    <% end %>
      
      <ol class="list-unstyled list-articles">
        <% page_articles('blog').each_with_index do |article, i| %>
        <li class="list-article" id="blog-<%= x = i + 1 %>">
          <article>

            <h2><%= link_to article.title, article %></h2>
            <div class="article-date"><%= article.date.strftime('%b %e') %></div>
            <!-- use article.summary(250) if you have Nokogiri available to show just
                 the first 250 characters -->
            <%= article.summary(100) %>
            <%= link_to "Read more", article %>
          </article>
        </li>
        <% end %>
      </ol>

    

    <% if paginate %>
      <% if next_page %>
        <p><%= link_to 'Next page', next_page %></p>
      <% end %>
    <% end %>
    </div>
    
    <div class="col-md-4">
      <aside class="sidebar">
              <h3>Recent blog posts</h3>
              <ul class="list-unstyled">
                <% page_articles('blog').each_with_index do |article, i| %>
                  <li><%= link_to article.title, article %></li>
                <% end %>
              </ul>
            </aside>
    </div>
  </div>
</div>